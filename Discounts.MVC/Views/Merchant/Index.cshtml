@model Discounts.Application.DTOs.Merchant.MerchantStatsDto

@{
	ViewData["Title"] = "მერჩანტის პანელი";
}

<div class="container mt-5">
	<div class="d-flex justify-content-between align-items-center mb-4">
		<h2><i class="bi bi-shop text-primary"></i> მერჩანტის სტატისტიკა</h2>
		<div>
			<a asp-action="CreateOffer" class="btn btn-primary"><i class="bi bi-plus-circle"></i> ახალი ფასდაკლება</a>
			<a asp-action="SalesHistory" class="btn btn-outline-secondary"><i class="bi bi-list-check"></i> გაყიდვების ისტორია</a>
		</div>
	</div>
	<hr />

	<div class="row row-cols-1 row-cols-md-2 row-cols-xl-4 g-4 mt-2">

		<div class="col">
			<div class="card shadow-sm border-0 border-start border-primary border-4 h-100">
				<div class="card-body">
					<div class="d-flex justify-content-between align-items-center">
						<div>
							<p class="text-muted text-uppercase mb-1" style="font-size: 0.85rem; font-weight: bold;">ჯამური შეთავაზებები</p>
							<h3 class="mb-0 fw-bold">@Model.TotalOffers</h3>
						</div>
						<div class="bg-primary bg-opacity-10 p-3 rounded">
							<i class="bi bi-tags fs-3 text-primary"></i>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col">
			<div class="card shadow-sm border-0 border-start border-success border-4 h-100">
				<div class="card-body">
					<div class="d-flex justify-content-between align-items-center">
						<div>
							<p class="text-muted text-uppercase mb-1" style="font-size: 0.85rem; font-weight: bold;">აქტიური</p>
							<h3 class="mb-0 fw-bold">@Model.ActiveOffers</h3>
						</div>
						<div class="bg-success bg-opacity-10 p-3 rounded">
							<i class="bi bi-check-circle fs-3 text-success"></i>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col">
			<div class="card shadow-sm border-0 border-start border-warning border-4 h-100">
				<div class="card-body">
					<div class="d-flex justify-content-between align-items-center">
						<div>
							<p class="text-muted text-uppercase mb-1" style="font-size: 0.85rem; font-weight: bold;">გაყიდული კუპონები</p>
							<h3 class="mb-0 fw-bold">@Model.TotalCouponsSold</h3>
						</div>
						<div class="bg-warning bg-opacity-10 p-3 rounded">
							<i class="bi bi-ticket-perforated fs-3 text-warning"></i>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col">
			<div class="card shadow-sm border-0 border-start border-danger border-4 h-100">
				<div class="card-body">
					<div class="d-flex justify-content-between align-items-center">
						<div>
							<p class="text-muted text-uppercase mb-1" style="font-size: 0.85rem; font-weight: bold;">ჯამური შემოსავალი</p>
							<h3 class="mb-0 fw-bold text-danger">@Model.TotalRevenue.ToString("C")</h3>
						</div>
						<div class="bg-danger bg-opacity-10 p-3 rounded">
							<i class="bi bi-wallet2 fs-3 text-danger"></i>
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>
