@model Discounts.MVC.Models.ErrorViewModel
@{
	ViewData["Title"] = "შეცდომა";
}

<div class="container text-center py-5 mt-5">
	<i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 5rem;"></i>
	<h1 class="display-4 fw-bold mt-3">შეცდომა</h1>
	<h4 class="text-muted mb-4">ბოდიშს გიხდით, დაფიქსირდა მოულოდნელი შეცდომა.</h4>

	<a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
		<i class="bi bi-arrow-left"></i> უკან დაბრუნება
	</a>

	@if (Model.ShowRequestId)
	{
		<p class="mt-5 text-muted small">
			<strong>მოთხოვნის ID (Request ID):</strong> <code>@Model.RequestId</code>
		</p>
	}
</div>
