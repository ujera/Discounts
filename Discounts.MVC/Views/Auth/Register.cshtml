@model Discounts.MVC.Models.Auth.RegisterViewModel

@{
	ViewData["Title"] = "რეგისტრაცია";
}

<div class="row justify-content-center mt-5">
	<div class="col-md-5">
		<div class="card shadow-sm">
			<div class="card-body p-4">
				<h3 class="text-center mb-4">შექმენი ანგარიში</h3>

				<form asp-controller="Auth" asp-action="Register" method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

					<div class="mb-4 text-center">
						<label class="form-label fw-bold d-block">ვინ ხართ თქვენ?</label>
						<div class="btn-group w-100" role="group">
							<input type="radio" class="btn-check" name="Role" id="roleCustomer" value="Customer" checked>
							<label class="btn btn-outline-primary" for="roleCustomer">
								<i class="bi bi-person"></i> ფიზიკური პირი
							</label>

							<input type="radio" class="btn-check" name="Role" id="roleMerchant" value="Merchant">
							<label class="btn btn-outline-primary" for="roleMerchant">
								<i class="bi bi-shop"></i> კომპანია
							</label>
						</div>
					</div>

					<div class="row mb-3">
						<div class="col-md-6">
							<div class="form-floating">
								<input asp-for="FirstName" class="form-control" placeholder="სახელი" />
								<label asp-for="FirstName"></label>
								<span asp-validation-for="FirstName" class="text-danger small"></span>
							</div>
						</div>
						<div class="col-md-6 mt-3 mt-md-0">
							<div class="form-floating">
								<input asp-for="LastName" class="form-control" placeholder="გვარი" />
								<label asp-for="LastName"></label>
								<span asp-validation-for="LastName" class="text-danger small"></span>
							</div>
						</div>
					</div>

					<div class="form-floating mb-3">
						<input asp-for="Email" class="form-control" placeholder="name@example.com" />
						<label asp-for="Email"></label>
						<span asp-validation-for="Email" class="text-danger small"></span>
					</div>

					<div class="form-floating mb-3">
						<input asp-for="Password" class="form-control" placeholder="პაროლი" />
						<label asp-for="Password"></label>
						<span asp-validation-for="Password" class="text-danger small"></span>
					</div>

					<div class="form-floating mb-4">
						<input asp-for="ConfirmPassword" class="form-control" placeholder="გაიმეორეთ პაროლი" />
						<label asp-for="ConfirmPassword"></label>
						<span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
					</div>

					<div class="d-grid gap-2">
						<button type="submit" class="btn btn-primary btn-lg">რეგისტრაცია</button>
					</div>
				</form>

				<div class="mt-3 text-center">
					<p class="mb-0">უკვე გაქვთ ანგარიში? <a asp-action="Login" class="text-decoration-none">შედით აქ</a></p>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
